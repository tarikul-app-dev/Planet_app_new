<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="planet.it.limited.planetapp.activity.AccountTopUpActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_top_up_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <!--<ImageView-->
                <!--android:id="@+id/imgv_home"-->
                <!--android:layout_width="25dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:background="@drawable/ic_home"-->
                <!--/>-->
                <TextView
                    android:id="@+id/txv_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recharge"
                    android:textSize="22dp"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

            <TextView
                android:id="@+id/txv_pay_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bkash Payment Method"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="03dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#B11C53" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_title"

                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="বিকাশ মার্চেন্ট একাউন্ট : "
                            android:textSize="25dp"
                            android:layout_marginLeft="05dp"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:id="@+id/txv_mob_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01743628667 "
                            android:textSize="25dp"
                            android:layout_marginLeft="05dp"
                            android:textColor="#000000"
                            />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_user_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableTint="#FF4081"
                                android:singleLine="true"
                                android:hint="User Name"
                                android:textColor="#000000"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_bkash_trxid"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:singleLine="true"
                                android:drawableTint="#FF4081"
                                android:hint="bKash TrxId"
                                android:textColor="#000000"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <Button
                                android:id="@+id/btn_refresh"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"

                                android:text="Refresh"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:theme="@style/Facebook.Button"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="20sp" />
                            <Button
                                android:id="@+id/btn_submit"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Submit"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:theme="@style/Facebook.Button"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:layout_marginRight="10dp"
                                />
                        </LinearLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/txv_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_one"
                                android:textSize="20dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:textColor="#000000"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="04dp"
                                android:layout_marginRight="15dp"
                                android:background="#B11C53" />
                            <TextView
                                android:id="@+id/txv_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_two"
                                android:textSize="20dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:textColor="#000000"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="04dp"
                                android:layout_marginRight="15dp"
                                android:background="#B11C53" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="01."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dial : *247#
 (*২৪৭# ডায়াল করুন)"
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="02."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Choose Option : Payment
(Payment) অপশন টি নির্বাচন করুন"
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="03."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" Enter Merchant bKash Account Number : 01743628667
 (মার্চেন্ট বিকাশ একাউন্ট নম্বর (01743628667) লিখুন  "
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="04."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Enter Amount (টাকার পরিমাণ লিখুন)."
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="05."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Enter Reference : 'User Name' of your account at Planet IT
(Planet IT'তে আপনার যে অ্যাকাউন্ট আছে উহার  User Name'টি লিখুন)"
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="06."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" Enter Counter Number : 1
(কাউন্টার নম্বর  ' ১ ' লিখুন)"
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="07."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Enter your PIN to confirm  the payment
(লেনদেন সম্পন্ন করতে আপনার গোপন পিন নাম্বারটি দিন।)"
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="08."
                                        android:textSize="18dp"
                                        android:textColor="#000000"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="You will receive a confirmation message from bKash.
(আপনি বিকাশ থেকে একটি কনফার্মেশন মেসেজ পাবেন) "
                                        android:textSize="18dp"
                                        android:layout_marginLeft="15dp"
                                        android:textColor="#000000"
                                        />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        </ScrollView>


                    </LinearLayout>

            </RelativeLayout>



</LinearLayout>

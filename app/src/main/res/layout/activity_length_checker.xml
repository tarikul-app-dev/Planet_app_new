<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_back_image"
    tools:context="planet.it.limited.planetapp.activity.SMSLengthActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_sms_checker_app"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/txv_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_length_check"
                    android:textSize="18dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#fff"
                    />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="02dp"

        android:layout_marginLeft="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/text_input_border"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            >

            <EditText
                android:id="@+id/edt_msg_content"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:inputType="text|textMultiLine"
                android:layout_marginLeft="04dp"
                android:layout_marginRight="04dp"
                android:layout_marginTop="04dp"
                android:imeOptions="actionDone"
                android:background="@null"
                android:hint="@string/enter_your_message"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:textSize="20dp"
                android:gravity="top"
                android:focusable="true"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/txv_text_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:layout_marginLeft="05dp"
                android:textSize="20dp"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/txv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Characters Remaining"
                android:layout_marginLeft="15dp"
                android:textSize="17dp"
                android:textColor="#fff"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:id="@+id/txv_message_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:id="@+id/txv_abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:textSize="17dp"
                        android:textColor="#fff"
                        />
                </LinearLayout>

            </RelativeLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>

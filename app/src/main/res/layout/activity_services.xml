<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_image"
    tools:context="planet.it.limited.planetapp.activity.ServicesActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_services"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/txv_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/our_services"
                    android:textSize="22dp"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          >
          <ImageView
              android:id="@+id/imgv_bulk_sms"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:src ="@drawable/ic_bulk_sms"
              android:layout_centerHorizontal="true"
              />

          <TextView
              android:id="@+id/headline_one"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/imgv_bulk_sms"
              android:text="@string/bulk_sms"
              android:textColor="#000"
              android:textSize="30dp"

              />



      </RelativeLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/text_bulk_sms"
              android:layout_below="@id/headline_one"
              android:layout_marginTop="10dp"
              android:textColor="#000"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              />
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:background="#B11C53" />

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/imgv_push_pull"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src ="@drawable/ic_push_pull"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/headline_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/push_pull"
                android:layout_below="@id/imgv_push_pull"
                android:textSize="30dp"
                android:textColor="#000"
                />



        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_push_pull"
                android:layout_below="@id/headline_one"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#B11C53" />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgv_app_dev"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_app_development"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/headline_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgv_app_dev"
                        android:text="@string/app_development"
                        android:textColor="#000"
                        android:textSize="30dp"

                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/headline_three"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_app_dev"
                        android:textColor="#000" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#B11C53" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgv_mobile_top_up"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_mobile_topup"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/headline_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgv_mobile_top_up"

                        android:text="@string/mobile_topup"
                        android:textColor="#000"
                        android:textSize="30dp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/headline_four"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_mobile_topup"
                        android:textColor="#000" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#B11C53" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
